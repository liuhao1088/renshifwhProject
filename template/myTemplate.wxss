.header {
  width: 100%;
}

.wrapper {
  width: 100%;
  border: 0rpx solid red;
  padding-top: 40rpx;
  padding-bottom: 80rpx;
}

.wrap {
  width: 85%;
  border: 0rpx solid red;
  margin-top: 60rpx;
}

.wrap-titleItem {
  width: 100%;
  border: 0rpx solid black;
}

.title-item {
  width: 100%;
  height: 55rpx;
  border: 0rpx solid orange;
  display: flex;
  justify-content: space-between;
}

.msg-item {
  width: 100%;
  height: 48rpx;
  border: 0rpx solid #bfa;
  white-space: pre-wrap;
  line-height: 20rpx;
  font-size: 10rpx;
  margin-top: 10rpx;
}

.img-item {
  width: 100%;
  border: 2rpx solid rgb(255, 255, 255);
}

.box {
  height: 100%;
  display: flex;
}

.box-item {
  width: 16rpx;
  height: 100%;
  background-color: rgb(230, 0, 39);
}

.box-title {
  height: 100%;
  line-height: 55rpx;
  font-size: 50rpx;
  font-weight: bold;
  background-image: linear-gradient(90deg, #535561, #17181d);
  -webkit-background-clip: text;
  color: transparent;
  margin-left: 10rpx;

}

.but-item {
  width: 140rpx;
  height: 100%;
  border: 0rpx solid red;
}

button {
  height: 40rpx;
  border-radius: 20rpx;
  color: rgb(255, 255, 255);
  background-image: linear-gradient(31deg, rgb(239, 112, 99), rgb(230, 0, 39));
}

button::after {
  border: 0;
}

.demarcation {
  width: 100%;
  height: 2rpx;
  background: linear-gradient(to right, #d5d5d5, #d5d5d5 22rpx, transparent 22rpx, transparent);
  background-size: 34rpx 100%;
  margin-top: 60rpx;
}

.advertising-item{
  width: 85%;
  margin-top: 80rpx;
}

.detail-imgItem{
  width: 85%;
  margin-top: 60rpx;
}

.footer {
  width: 100%;
  float: left;
  background-color: #272727;
}